<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="androidtitancom.cuteapp">

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_heart_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".gethernumber.PressButtonActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".gethernumber.CuteActivity"
            android:label="@string/title_activity_cute"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gethernumber.PressButtonActivity" />
        </activity>
        <activity
            android:name=".gethernumber.ClosingActivity"
            android:label="@string/title_activity_closing"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".gethernumber.CuteActivity" />
        </activity>
        <activity
            android:name=".challenges.ComfortZoneActivity"
            android:label="@string/title_activity_comfort_zone_challenge"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".challenges.ChallengeDetailActivity"
            android:label="@string/title_activity_challenge_detail"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>